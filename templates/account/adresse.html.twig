{% extends 'layouts/base.html.twig' %}

{% block title %}Mes adresses de livraison{% endblock %}

{% block body %}
    <a href="{{ path('app_adresse_add') }}" class="btn btn-info btn-sm float-right">Ajouter une adresse</a>
    <h1>Mes adresses</h1>
    <p>Ici, vous pouvez gérer vos adresses de livraison.</p><br>
    <hr>
    {% if app.user.adresses|length == 0%}
        <b class="text-center">Vous n'avez pas encore ajouté d'adresse. Pour en ajouter une, <a href="{{ path('app_adresse_add') }}">cliquez ici</a>.</b>
    {% else %}
        <div class="row">
            {% for adresse in app.user.adresses %}
                <div class="col-md-4">*
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{ adresse.nom }}</h5>
                            <p class="card-text">{{ adresse.numrue }} {{ adresse.rue }}</p>
                            <p class="card-text">{{ adresse.complementadresee }}</p>
                            <p class="card-text">{{ adresse.codepostal }} {{ adresse.ville }}</p>
                            <p class="card-text">{{ adresse.pays }}</p>
                            <a href="{{ path('app_adresse_upload', {'id': adresse.id}) }}">Modifier</a> | <a href="{{ path('app_adresse_remove', {'id': adresse.id}) }}">Supprimer</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
    <br>
    <br>
    <a href="{{ path('app_compte') }}">Retour à mon compte</a>
{% endblock %}

