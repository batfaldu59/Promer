{% extends 'layouts/base.html.twig' %}

{% block title %}Nos produits{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-3">
            <h3>Filtre</h3>
            {{ form(form) }}
        </div>
        <div class="col-md-9">
            <h1>Nos produits</h1>
            <div class="row">
                {% for product in products %}
                    <div class="col-md-4">
                        <div class="product-item text-center">
                            <a href="{{ path('app_show', {'slug': product.slug}) }}"><img src="/uploads/{{ product.imageProduit }}" alt="{{ product.nom }}" height="10px" class="img-fluid"></a>
                            <h5 style="text-transform: uppercase; margin-bottom: 1px; font-size: 15px">{{ product.nom }}</h5>
                            <span style="display: block; margin-bottom: 1px; font-size: 13px" class="product_description">{{ product.description|u.truncate(50,'...') }}</span>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

