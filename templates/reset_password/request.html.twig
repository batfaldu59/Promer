{% extends 'layouts/base.html.twig' %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h2 class="text-center mb-3">Réinitialiser votre mot de passe</h2>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small><i>
                Entrez votre adresse email et nous vous enverons un lien
                qui vous permettra de réinitialiser votre mot de passe.
            </i></small>
        </div>
        
        <br />

        <button class="btn btn-primary">Envoyer un mail pour réinitialiser votre mot de passe</button>
    {{ form_end(requestForm) }}
{% endblock %}